<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CameraActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <SurfaceView
            android:id="@+id/sfv_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/selector_check_red_to_orange"
            android:padding="@dimen/dp_10"/>
        <Button
            android:onClick="takePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take"
            android:textAllCaps="false"
            android:layout_gravity="bottom|center_horizontal"/>
        <ImageView
            android:id="@+id/iv_snap_shot"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/chicken_legs"
            android:background="@android:color/white"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_clear_red_to_orange"
            android:padding="@dimen/dp_10"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_check_red_to_orange"
            android:padding="@dimen/dp_10"
            android:layout_gravity="end"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25">
        <TextView
            android:id="@+id/tv_best_result"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_20"
            android:textColor="@android:color/holo_green_dark"/>
        <View
            android:layout_width="@dimen/dp_2"
            android:layout_height="wrap_content"
            android:background="@color/grey"/>
        <TextView
            android:id="@+id/tv_basic_nutrients"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/dp_5"
            android:gravity="center_vertical"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"/>




</LinearLayout>