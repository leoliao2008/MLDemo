<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_2"
        android:layout_margin="@dimen/dp_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_diet_log_tv_name"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_10"
                android:gravity="center"
                android:text="Apple"
                android:textColor="@android:color/white"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@android:color/darker_gray"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_marginRight="@dimen/dp_1"/>
                <TextView
                    android:id="@+id/item_diet_log_tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="2018/06/28"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Consumption"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@android:color/darker_gray"
                    android:layout_marginRight="@dimen/dp_1"/>
                <TextView
                    android:id="@+id/item_diet_log_tv_consumption"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="100g"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

            <ImageView
                android:id="@+id/item_diet_log_iv_thumb_nail"
                android:layout_width="@dimen/dp_81"
                android:layout_height="@dimen/dp_81"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_error_outline_red_64dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>