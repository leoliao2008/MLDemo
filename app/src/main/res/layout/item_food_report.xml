<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_5"
        android:layout_margin="@dimen/dp_2"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_5">
            <TextView
                android:id="@+id/item_food_report_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"/>
            <TextView
                android:id="@+id/item_food_report_tv_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="id"/>
            <TextView
                android:id="@+id/item_food_report_tv_derivation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="derivation"/>
            <TextView
                android:id="@+id/item_food_report_tv_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="group"/>
            <TextView
                android:id="@+id/item_food_report_tv_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="value"/>
            <TextView
                android:id="@+id/item_food_report_tv_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="unit"/>

        </LinearLayout>

        <TextView
            android:id="@+id/item_food_report_tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:textSize="@dimen/sp_50"
            android:layout_gravity="center_vertical|end"
            android:paddingRight="@dimen/dp_10"/>
    </android.support.v7.widget.CardView>

</FrameLayout>