<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose One of These SDKs:"
            android:textSize="18sp"
            android:padding="5dp"
            android:textColor="#000"
            android:background="#fff"/>
        <RadioGroup
            android:id="@+id/group_approaches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="#fff">
            <RadioButton
                android:checked="true"
                android:id="@+id/rdbtn_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="MLKitOffline"/>
            <RadioButton
                android:id="@+id/rdbtn_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="MLKitOnline"/>
            <RadioButton
                android:id="@+id/rdbtn_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="GoogleCloudVisionAPI"/>
        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is ..."
            android:textSize="25sp"
            android:padding="5dp"
            android:gravity="center"
            android:background="#fff"/>

        <Button
            android:id="@+id/btn_identify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Identify"
            android:textAllCaps="false"
            android:textSize="25sp"/>

    </LinearLayout>





</RelativeLayout>