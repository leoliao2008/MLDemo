<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_2"
        android:layout_margin="@dimen/dp_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/item_food_data_base_iv_thumb_nail"
                android:layout_width="@dimen/dp_81"
                android:layout_height="@dimen/dp_81"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_error_outline_red_64dp"/>
            <TextView
                android:id="@+id/item_food_data_base_tv_name"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:gravity="center"
                android:text="Apple"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/item_food_data_base_tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Description"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:textSize="@dimen/sp_10"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/item_food_data_base_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018/06/20 12:30:26"
            android:textColor="@android:color/holo_red_dark"
            android:layout_gravity="bottom|end"
            android:textSize="@dimen/sp_10"
            android:padding="@dimen/dp_5"/>


    </android.support.v7.widget.CardView>

</FrameLayout>